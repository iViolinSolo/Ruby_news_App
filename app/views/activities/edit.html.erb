<h1>Update Activity Page</h1>

<%= form_for(:activity, url: activity_path, method: :patch) do |f| %>

  <% if @activity.errors.any? %>
    <div id="error_explanation" xmlns="http://www.w3.org/1999/html">
      <h2>
        <%= pluralize(@activity.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul>
        <% @activity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', activities_path %>

